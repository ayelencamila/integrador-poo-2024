<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.Priority?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="biblioteca.controladores.VerRacksController"
            prefWidth="700" prefHeight="450"
            style="-fx-background-color: #f9f9f9;">

    <!-- Encabezado -->
    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #2c3e50;">
            <padding><Insets top="20" bottom="20"/></padding>
            <Label text="Gesti칩n de Racks"
                   style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>
    </top>

    <!-- Centro: Tabla con crecimiento autom치tico -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <TableView fx:id="tablaRacks">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="colDescripcion" text="Descripci칩n" prefWidth="500"/>
                </columns>
            </TableView>
            <!-- Hace que la tabla se expanda verticalmente -->
        </VBox>
    </center>

    <!-- Botones con distribuci칩n flexible -->
    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Button text="Agregar Rack"
                    onAction="#agregarRack"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Modificar Rack"
                    onAction="#modificarRack"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Eliminar Rack"
                    onAction="#eliminarRack"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>

