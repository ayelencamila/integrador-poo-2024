<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="biblioteca.controladores.LibrosMasPrestadosController"
            prefWidth="600" prefHeight="450"
            style="-fx-background-color: #f4f4f4;">

    <top>
        <VBox alignment="CENTER"  style= "-fx-background-color: #2c3e50;">
            <Label text="Libros más prestados"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill:rgb(255, 255, 255);"/>
            <Separator prefWidth="580"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="30" bottom="10" left="30"/>
            </padding>
            <TableView fx:id="tablaResumen"
                       prefHeight="320"
                       style="-fx-background-radius: 8; -fx-background-color: white; -fx-border-color: #d1d1d1; -fx-border-radius: 8;">
                <columns>
                    <TableColumn fx:id="colTitulo" text="Título" prefWidth="350"
                                 style="-fx-font-size: 14px;"/>
                    <TableColumn fx:id="colCantidad" text="Veces prestado" prefWidth="200"
                                 style="-fx-font-size: 14px;"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Button text="Cerrar"
                    fx:id="btnCerrar"
                    onAction="#cerrarVentana"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </HBox>
    </bottom>

</BorderPane>
