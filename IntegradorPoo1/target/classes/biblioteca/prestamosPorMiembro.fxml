<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="biblioteca.controladores.PrestamosPorMiembroController">
    <children>
        <VBox spacing="20.0" alignment="TOP_CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" >
            <children>
                <Label text="Préstamos Activos por Miembro"
                       style="-fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <HBox spacing="15" alignment="CENTER_LEFT" >
                    <children>
                        <Label text="ID del miembro:"
                               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <TextField fx:id="campoIdMiembro" promptText="Ingrese el ID"
                                   prefWidth="180"
                                   style="-fx-background-radius: 5;"/>
                        <Button fx:id="btnBuscar" text="Buscar" onAction="#buscarPrestamos"
                                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 5;"/>
                    </children>
                </HBox>

                <Label fx:id="mensajeError" textFill="red" style="-fx-font-size: 13px;"/>

                <TableView xmlns:fx="http://javafx.com/fxml"
                           fx:id="tablaPrestamos" prefHeight="320" prefWidth="650"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; 
                                  -fx-table-header-background: #2980b9;">
                    <columns>
                        <TableColumn fx:id="colIdPrestamo" text="ID Préstamo" prefWidth="120"/>
                        <TableColumn fx:id="colTituloLibro" text="Título del Libro" prefWidth="250"/>
                        <TableColumn fx:id="colFechaInicio" text="Fecha de Inicio" prefWidth="140"/>
                        <TableColumn fx:id="colFechaVencimiento" text="Fecha de Vencimiento" prefWidth="140"/>
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
