<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="biblioteca.controladores.VerMiembrosController"
            prefWidth="800" prefHeight="500">

    <top>
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </padding>
            <Label text="GestiÃ³n de Miembros"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tablaMiembros">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                <TableColumn fx:id="colApellido" text="Apellido" prefWidth="150"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Button text="Agregar miembro" onAction="#agregarMiembro"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Modificar miembro" onAction="#modificarMiembro"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="Dar de baja" onAction="#darDeBajaMiembro"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
