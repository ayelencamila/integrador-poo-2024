<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="biblioteca.controladores.VerPrestamosController"
            prefWidth="750" prefHeight="400">

    <TableView fx:id="tablaPrestamos"
               AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="60">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colMiembro" text="Miembro" prefWidth="150"/>
            <TableColumn fx:id="colLibro" text="Libro" prefWidth="150"/>
            <TableColumn fx:id="colInicio" text="Inicio" prefWidth="100"/>
            <TableColumn fx:id="colVencimiento" text="Vencimiento" prefWidth="100"/>
            <TableColumn fx:id="colDevolucion" text="DevoluciÃ³n" prefWidth="100"/>
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="60"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER"
          AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">
        <Button text="Devolver libro"
                fx:id="btnDevolver"
                onAction="#devolver"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>
</AnchorPane>
